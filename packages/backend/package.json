{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "docker-compose up -d mysql && docker-compose up --build backend",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:cov:html": "jest  --coverage --coverageReporters='html' --coverageReporters='text-summary'",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:blackbox": "cross-env DB_HOST=${DB_HOST:-127.0.0.1} jest --config ./test/jest-blackbox.json --runInBand",
    "test:e2e": "cross-env DB_HOST=${DB_HOST:-127.0.0.1} jest --config ./test/jest-e2e.json --runInBand",
    "test:e2e:ci": "jest --config ./test/jest-e2e.json --runInBand --ci --reporters=default --reporters=jest-junit --forceExit",
    "test:ci": "jest --config ./test/jest-unit.json --ci --reporters=default --reporters=jest-junit",
    "test:unit": "jest --config ./test/jest-unit.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "mysql2": "^3.16.0",
    "nest-winston": "^1.10.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.28",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/**/*.module.ts",
      "!./src/main.ts",
      "!./src/**/*.dto.ts",
      "!./src/**/*.entity.ts",
      "!./src/**/*.enum.ts",
      "!./src/**/*.constant.ts",
      "!./src/**/*.constants.ts",
      "!./src/**/*.decorator.ts",

      "!./src/common/logger/**/*.ts",
      "!./src/common/middlewares/**/*.ts",
      "!./src/seed/**/*.ts",

      "!./src/**/repositories/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src/", "<rootDir>/test/"],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  }

}