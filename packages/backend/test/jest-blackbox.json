{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".blackbox-(test|spec).ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "reporters": [
    "default",
    ["jest-html-reporter", {
      "pageTitle": "Blackbox Test Report",
      "outputPath": "./blackbox-test-report.html",
      "includeFailureMsg": true
    }]
  ]
}
